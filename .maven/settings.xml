<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>
        <server>
            <id>github</id>
            <username>${env.MAVEN_USERNAME}</username>
            <password>${env.MAVEN_TOKEN}</password>
        </server>
        <server>
            <id>cdo-panorama-common</id>
            <username>${env.MAVEN_USERNAME}</username>
            <password>${env.MAVEN_TOKEN}</password>
        </server>
        <server>
            <id>cdo-panorama-async</id>
            <username>${env.MAVEN_USERNAME}</username>
            <password>${env.MAVEN_TOKEN}</password>
        </server>
        <server>
            <id>cdo-panorama-webhook</id>
            <username>${env.MAVEN_USERNAME}</username>
            <password>${env.MAVEN_TOKEN}</password>
        </server>
    </servers>
	<profiles>
		<profile>
			<id>github</id>
			<repositories>
				<repository>
					<id>cdo-panorama-common</id>
					<url>https://maven.pkg.github.com/telus/cdo-panorama-common</url>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
				</repository>
				<repository>
					<id>cdo-panorama-async</id>
					<url>https://maven.pkg.github.com/telus/cdo-panorama-async</url>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
				</repository>
				<repository>
					<id>cdo-panorama-webhook</id>
					<url>https://maven.pkg.github.com/telus/cdo-panorama-webhook</url>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
				</repository>				
			</repositories>
		</profile>
	</profiles>
    <activeProfiles>
        <activeProfile>github</activeProfile>
    </activeProfiles>
</settings>

